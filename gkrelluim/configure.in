# Process this file with autoconf to produce a configure script.

AC_PREREQ(2.59)

AC_INIT([gkrelluim], 0.0.2, [dai@kip.iis.toyama-u.ac.jp])
AM_INIT_AUTOMAKE($PACKAGE_NAME, $PACKAGE_VERSION, no-define)

AC_CONFIG_SRCDIR([gkrelluim.c])

# Checks for programs.
AC_PROG_CC

# pkg-config
PKG_CHECK_MODULES(UIM, uim >= 0.4.3)
